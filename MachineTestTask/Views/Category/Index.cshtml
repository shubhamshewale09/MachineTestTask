@model List<MachineTestTask.Models.Category>

<h2 class="text-info">Category List</h2>
<br />
<form action="@Url.Action("Create")" method="get">
    <button class="btn btn-success btn-sm" type="submit">Add New category</button>
</form>
<br />
<table class="table table-bordered " style="text-align:center">
    <thead>
        <tr>
            <th>Category Id</th>
            <th>Category Name</th>
            <th>Action</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
                <td>
                    <a href="@Url.Action("Edit", "Category", new {id=item.CategoryId})" class="btn btn-primary btn-sm">Edit</a> ||
                    <a href="@Url.Action("Delete", "Category", new {id=item.CategoryId})" class="btn btn-danger btn-sm">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>
<br />
<form action="@Url.Action("Index","Home")">
    <button class="btn btn-primary" type="submit">Back</button>
</form>

